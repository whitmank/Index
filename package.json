{
  "name": "index-project",
  "productName": "Index",
  "version": "1.0.0",
  "description": "Personal information indexing and visualization system",
  "private": true,
  "main": "electron/main/index.js",
  "workspaces": [
    "backend/*",
    "frontend",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently --kill-others --prefix-colors \"bgBlue.bold,bgMagenta.bold\" --prefix \"[{name}]\" --names \"database,frontend\" \"npm:dev:db\" \"npm:dev:frontend\"",
    "dev:db": "npm run start --workspace=@index/database",
    "dev:frontend": "npm run dev --workspace=@index/frontend",
    "dev:scanner": "npm run scan --workspace=@index/scanner",
    "electron:dev": "concurrently --kill-others --prefix-colors \"bgBlue.bold,bgMagenta.bold,bgGreen.bold\" --prefix \"[{name}]\" --names \"database,frontend,electron\" \"npm:dev:db\" \"npm:dev:frontend\" \"npm:electron:start\"",
    "electron:start": "wait-on http://localhost:3000/health && wait-on http://localhost:5173 && electron .",
    "build": "npm run build:frontend && npm run build:electron",
    "build:frontend": "npm run build --workspace=@index/frontend -- --mode electron",
    "build:electron": "electron-builder",
    "package:mac": "npm run build && electron-builder --mac",
    "package:win": "npm run build && electron-builder --win",
    "package:linux": "npm run build && electron-builder --linux",
    "install:all": "npm install",
    "start:db": "npm run start --workspace=@index/database",
    "start:scanner": "npm run scan --workspace=@index/scanner",
    "build:all": "npm run build --workspaces --if-present",
    "test": "npm test --workspaces --if-present"
  },
  "keywords": [
    "indexing",
    "database",
    "scanner",
    "visualization"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "chokidar": "^5.0.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0",
    "electron-devtools-installer": "^4.0.0",
    "electron-reloader": "^1.2.3",
    "get-port": "^7.1.0",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.index.app",
    "productName": "Index",
    "directories": {
      "output": "dist-electron",
      "buildResources": "electron/resources"
    },
    "files": [
      "electron/main/**/*",
      "electron/preload/**/*",
      "frontend/dist/**/*",
      "backend/**/*",
      "!backend/**/node_modules",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "electron/resources/mac",
        "to": "binaries/mac",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "electron/resources/win",
        "to": "binaries/win",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "electron/resources/linux",
        "to": "binaries/linux",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    }
  }
}
